# n8n Configuration
# Copy this file to .env and fill in your values

# ===================
# n8n Server Settings
# ===================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http

# ===================
# Authentication
# ===================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_REQUIRED

# ===================
# Database
# ===================
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=CHANGE_ME_REQUIRED
DB_POSTGRESDB_PASSWORD=CHANGE_ME_REQUIRED

# Alternative: SQLite (for development)
# DB_TYPE=sqlite
# DB_SQLITE_DATABASE=/home/user/.n8n/database.sqlite

# ===================
# External APIs
# ===================
# Facturacion API
FACTURACION_API_URL=https://api.facturacion.example.com
FACTURACION_API_KEY=YOUR_API_KEY_HERE
FACTURACION_API_TIMEOUT=30000

# DIAN API
DIAN_API_URL=https://api.dian.gov.co
DIAN_API_KEY=YOUR_DIAN_API_KEY_HERE

# Notification Services
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE
SMTP_FROM=noreply@example.com

# ===================
# Timezone & Localization
# ===================
GENERIC_TIMEZONE=America/Bogota
LOCALE=es_CO

# ===================
# Logging
# ===================
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console,file
N8N_LOG_FILE_LOCATION=/home/user/.n8n/logs/

# ===================
# Webhooks
# ===================
WEBHOOK_URL=http://localhost:5678/
N8N_WEBHOOK_TUNNEL_URL=

# ===================
# Security
# ===================
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=GENERATE_YOUR_OWN_KEY_HERE

# ===================
# Performance
# ===================
N8N_CONCURRENCY_PRODUCTION_LIMIT=10
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_MAX_AGE=168

# ===================
# Features
# ===================
N8N_METRICS=false
N8N_DIAGNOSTICS_ENABLED=false
